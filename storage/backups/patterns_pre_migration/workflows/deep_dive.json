{
  "id": "deep_dive",
  "name": "Company Deep Dive",
  "description": "Comprehensive analysis using Buffett-Ackman-Dalio framework",
  "triggers": ["deep dive", "full analysis", "investment thesis", "research"],
  "entities": ["SYMBOL"],
  "priority": 9,
  "steps": [
    {
      "agent": "data_harvester",
      "method": "process",
      "params": {
        "request": "Get all available data for {SYMBOL}: financials, ratios, earnings, news, insider trading, institutional holdings"
      },
      "output": "company_data"
    },
    {
      "agent": "data_digester",
      "method": "process",
      "params": {
        "data": "{company_data}",
        "data_type": "deep_analysis"
      },
      "output": "structured_analysis"
    },
    {
      "agent": "pattern_spotter",
      "method": "process",
      "params": {
        "data": "{structured_analysis}",
        "analysis_type": "investment_quality"
      },
      "output": "quality_metrics"
    },
    {
      "agent": "relationship_hunter",
      "method": "process",
      "params": {
        "data": "{structured_analysis}",
        "target": "{SYMBOL}"
      },
      "output": "relationships"
    },
    {
      "agent": "forecast_dreamer",
      "method": "process",
      "params": {
        "data": "{company_data}",
        "target": "{SYMBOL}",
        "horizon": "1y"
      },
      "output": "forecast"
    },
    {
      "agent": "claude",
      "method": "process",
      "params": {
        "user_input": "Create investment thesis for {SYMBOL} using Buffett-Ackman-Dalio framework. Data: {structured_analysis}, Quality: {quality_metrics}, Related: {relationships}, Forecast: {forecast}. Include: Executive Summary, Business Analysis, Financial Health, Valuation, Risks, Catalyst, Recommendation with conviction level"
      },
      "output": "investment_thesis"
    }
  ],
  "response_type": "deep_analysis",
  "response_template": "{investment_thesis}",
  "cache_ttl": 3600
}