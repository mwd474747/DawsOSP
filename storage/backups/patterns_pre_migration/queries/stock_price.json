{
  "id": "stock_price",
  "name": "Get Stock Price",
  "description": "Fetches current stock price and displays key metrics",
  "triggers": ["stock price", "price", "quote", "trading", "cost", "worth"],
  "entities": ["SYMBOL"],
  "priority": 10,
  "steps": [
    {
      "agent": "data_harvester",
      "method": "process",
      "params": {
        "request": "Get quote for {SYMBOL}"
      },
      "output": "quote_data"
    },
    {
      "agent": "claude",
      "method": "process",
      "params": {
        "user_input": "Format this nicely: {quote_data}"
      },
      "output": "formatted_response"
    }
  ],
  "response_type": "stock_quote",
  "response_template": "{SYMBOL} is trading at ${quote_data.price} ({quote_data.change_percent}%)",
  "error_handling": "stop",
  "cache_ttl": 60
}