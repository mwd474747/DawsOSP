{
  "id": "sentiment_analysis",
  "name": "Market Sentiment Analysis",
  "description": "Analyzes market sentiment from news and social signals (Trinity 2.0 capability routing)",
  "triggers": [
    "sentiment",
    "news",
    "social",
    "buzz",
    "momentum"
  ],
  "entities": [
    "SYMBOL"
  ],
  "priority": 6,
  "steps": [
    {
      "description": "",
      "action": "execute_through_registry",
      "params": {
        "capability": "can_fetch_news",
        "context": {
          "symbol": "{SYMBOL}"
        }
      },
      "save_as": "sentiment_data"
    },
    {
      "description": "",
      "action": "execute_through_registry",
      "params": {
        "capability": "can_identify_signals",
        "context": {
          "data": "{sentiment_data}",
          "analysis_type": "sentiment_trend"
        }
      },
      "save_as": "sentiment_patterns"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "claude",
        "context": {
          "user_input": "Analyze sentiment for {SYMBOL} from {sentiment_data} and trends {sentiment_patterns}. Report: 1) Overall sentiment score 2) Key themes 3) Sentiment shift 4) Contrarian signals 5) Trade ideas"
        }
      },
      "save_as": "sentiment_report"
    }
  ],
  "response_type": "analysis",
  "response_template": "{sentiment_report}",
  "cache_ttl": 300,
  "version": "2.0",
  "last_updated": "2025-10-08"
}