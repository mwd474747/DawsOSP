{
  "id": "dashboard_generator",
  "name": "Dynamic Dashboard Generator",
  "description": "Generates personalized dashboard based on user patterns and preferences (Trinity 2.0 capability routing)",
  "category": "ui",
  "triggers": [
    "dashboard",
    "home",
    "overview"
  ],
  "version": "2.0",
  "last_updated": "2025-10-08",
  "steps": [
    {
      "action": "enriched_lookup",
      "params": {
        "data_type": "ui_configurations",
        "query": "dashboard_widgets"
      },
      "save_as": "widget_config"
    },
    {
      "action": "enriched_lookup",
      "params": {
        "data_type": "ui_configurations",
        "query": "layout_templates.default_dashboard"
      },
      "save_as": "layout"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "ui_generator",
        "context": {
          "component_type": "dashboard_widget",
          "data": {
            "widgets": "{widget_config}",
            "layout": "{layout}",
            "theme": "dark_theme"
          },
          "style": "grid"
        }
      },
      "save_as": "dashboard_html"
    }
  ]
}