# Docker Environment Variables for DawsOS
# Copy this to .env and add your actual API keys

# Required API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
FMP_API_KEY=your_fmp_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
FRED_API_KEY=your_fred_api_key_here
NEWSAPI_KEY=your_newsapi_key_here

# Optional Database Configuration
POSTGRES_PASSWORD=dawsos123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=dawsos
POSTGRES_USER=dawsos

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_THEME_BASE=dark
STREAMLIT_THEME_PRIMARY_COLOR=#00cc88
STREAMLIT_THEME_BACKGROUND_COLOR=#0e1117
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#262730

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
CACHE_TTL=3600
MAX_WORKERS=4