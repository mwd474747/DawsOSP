{
  "buffett_calculations": {
    "owner_earnings": {
      "concept": "True cash earnings available to owners",
      "formula": {
        "base": "Net Income + Depreciation & Amortization - Maintenance CapEx +/- Working Capital Changes",
        "detailed": "NI + D&A - CapEx_maintenance + Changes_in_NWC - Stock_comp + Tax_benefit_stock_comp"
      },
      "steps": [
        {
          "step": 1,
          "action": "Start with reported net income",
          "adjustment": "Remove one-time items"
        },
        {
          "step": 2,
          "action": "Add back depreciation and amortization",
          "note": "Non-cash charges"
        },
        {
          "step": 3,
          "action": "Subtract maintenance capex",
          "estimation": "Use 70% of D&A or analyze company guidance"
        },
        {
          "step": 4,
          "action": "Adjust for working capital changes",
          "smoothing": "Use 3-year average to smooth volatility"
        },
        {
          "step": 5,
          "action": "Add back stock-based compensation",
          "rationale": "Real expense but non-cash"
        }
      ],
      "quality_checks": {
        "good_signs": [
          "Owner earnings > Net income",
          "Owner earnings growing faster than revenue",
          "Consistent positive owner earnings"
        ],
        "red_flags": [
          "Owner earnings < 0 while Net income > 0",
          "Declining owner earnings with rising net income",
          "High volatility in owner earnings"
        ]
      },
      "examples": {
        "apple": {
          "net_income": 99.8,
          "depreciation": 11.1,
          "maintenance_capex": -7.8,
          "working_capital": 2.1,
          "owner_earnings": 105.2,
          "quality": "Excellent - exceeds net income"
        }
      }
    },

    "moat_quantification": {
      "roic_calculation": {
        "formula": "NOPAT / Invested Capital",
        "nopat": "EBIT × (1 - Tax Rate)",
        "invested_capital": "Total Assets - Excess Cash - Non-Interest Bearing Current Liabilities",
        "adjustments": [
          "Add back goodwill amortization",
          "Include operating leases",
          "Adjust for off-balance sheet items"
        ]
      },
      "roic_vs_wacc_spread": {
        "calculation": "ROIC - WACC",
        "interpretation": {
          ">15%": {"moat": "Wide", "action": "Strong buy"},
          "10-15%": {"moat": "Good", "action": "Buy"},
          "5-10%": {"moat": "Narrow", "action": "Buy at discount"},
          "0-5%": {"moat": "Minimal", "action": "Avoid unless deep value"},
          "<0%": {"moat": "None", "action": "Avoid - destroying value"}
        },
        "persistence_test": "Calculate 10-year average and trend"
      },
      "incremental_roic": {
        "formula": "Change in NOPAT / Change in Invested Capital",
        "importance": "Shows return on new investments",
        "benchmark": "Should exceed WACC by 5%+"
      },
      "gross_margin_stability": {
        "calculation": "Standard deviation of 10-year gross margins",
        "interpretation": {
          "<1%": "Rock solid pricing power",
          "1-2%": "Very stable",
          "2-3%": "Stable",
          "3-5%": "Some volatility",
          ">5%": "Unstable - weak moat"
        }
      }
    },

    "intrinsic_value_calculations": {
      "dcf_two_stage": {
        "stage1_growth": {
          "years": 5,
          "rate_selection": {
            "maximum": "min(Historical_growth, 25%)",
            "conservative": "min(Historical_growth, GDP + 5%)",
            "base": "Analyst consensus × 0.8"
          }
        },
        "stage2_terminal": {
          "method1_multiple": {
            "formula": "Year5_FCF × Terminal_Multiple",
            "multiple_selection": {
              "high_quality": 15,
              "average_quality": 12,
              "low_quality": 10
            }
          },
          "method2_perpetuity": {
            "formula": "Year5_FCF × (1 + g) / (r - g)",
            "terminal_growth": "2-3% (GDP growth)",
            "discount_rate": "10% minimum"
          }
        },
        "present_value": {
          "formula": "Sum(FCF_t / (1 + r)^t) + Terminal_Value / (1 + r)^5",
          "discount_rate_selection": {
            "stable_blue_chip": "8-10%",
            "average_company": "10-12%",
            "risky_growth": "12-15%",
            "speculative": "15-20%"
          }
        }
      },
      "earnings_power_value": {
        "formula": "Normalized_EBIT × (1 - Tax_Rate) / WACC",
        "normalization_process": [
          "Take 5-year average EBIT margin",
          "Apply to current sales",
          "Adjust for one-time items",
          "Consider cycle position"
        ],
        "use_cases": [
          "No-growth baseline valuation",
          "Mature company valuation",
          "Floor value for quality companies"
        ]
      },
      "graham_number": {
        "formula": "sqrt(15 × EPS × Book_Value_Per_Share)",
        "interpretation": "Maximum price for defensive investor",
        "adjustment": "Use normalized earnings not current"
      }
    },

    "margin_of_safety_calculation": {
      "calculation": "(Intrinsic_Value - Market_Price) / Intrinsic_Value",
      "required_margins": {
        "wonderful_company": {
          "moat": "Wide",
          "required_discount": "0-20%",
          "rationale": "Quality worth paying for"
        },
        "good_company": {
          "moat": "Moderate",
          "required_discount": "25-35%",
          "rationale": "Need margin for uncertainty"
        },
        "average_company": {
          "moat": "Minimal",
          "required_discount": "40-50%",
          "rationale": "Higher risk requires more margin"
        },
        "cigar_butt": {
          "moat": "None",
          "required_discount": "50-66%",
          "rationale": "Deep value required"
        }
      }
    }
  },

  "dalio_calculations": {
    "debt_cycle_position": {
      "short_term_cycle_score": {
        "components": [
          {
            "metric": "credit_growth_vs_gdp",
            "calculation": "Credit_growth_rate - GDP_growth_rate",
            "scoring": {">3%": 1, "0-3%": 0, "<0%": -1}
          },
          {
            "metric": "unemployment_trend",
            "calculation": "Current - 12_month_average",
            "scoring": {"falling": 1, "stable": 0, "rising": -1}
          },
          {
            "metric": "yield_curve",
            "calculation": "10Y - 2Y spread",
            "scoring": {">200bps": 1, "50-200bps": 0, "<50bps": -1}
          },
          {
            "metric": "central_bank_stance",
            "calculation": "Fed_funds vs neutral_rate",
            "scoring": {"easing": -1, "neutral": 0, "tightening": 1}
          }
        ],
        "interpretation": {
          ">2": "Late expansion",
          "0-2": "Mid-cycle",
          "-2-0": "Early cycle",
          "<-2": "Recession"
        }
      },
      "long_term_cycle_score": {
        "components": [
          {
            "metric": "total_debt_to_gdp",
            "thresholds": {">300%": "Late", "200-300%": "Mid", "<200%": "Early"}
          },
          {
            "metric": "interest_rates",
            "thresholds": {"<1%": "Late", "1-3%": "Mid-Late", ">3%": "Early-Mid"}
          },
          {
            "metric": "wealth_inequality",
            "calculation": "Top_1%_wealth_share",
            "thresholds": {">35%": "Late", "25-35%": "Mid", "<25%": "Early"}
          },
          {
            "metric": "populism_index",
            "components": ["Political_polarization", "Anti-establishment_vote_share"],
            "thresholds": {"High": "Late", "Moderate": "Mid", "Low": "Early"}
          }
        ]
      }
    },

    "all_weather_weights": {
      "risk_parity_calculation": {
        "step1_volatility": {
          "stocks": "16% annual",
          "long_bonds": "10% annual",
          "commodities": "15% annual",
          "gold": "15% annual"
