{
  "id": "alert_manager",
  "name": "Smart Alert System",
  "description": "Monitors thresholds and generates contextual alerts",
  "category": "ui",
  "triggers": ["alerts", "notifications", "warnings"],
  "workflow": [
    {
      "step": "get_alert_thresholds",
      "action": "enriched_lookup",
      "params": {
        "data_type": "ui_configurations",
        "query": "alert_thresholds"
      },
      "output": "thresholds"
    },
    {
      "step": "check_portfolio_risk",
      "agent": "risk_agent",
      "params": {
        "include_correlations": true,
        "timeframe": "1M"
      },
      "output": "current_risk"
    },
    {
      "step": "check_market_conditions",
      "agent": "macro_agent",
      "params": {
        "indicators": ["VIX", "DXY", "TNX"],
        "include_trends": true
      },
      "output": "market_metrics"
    },
    {
      "step": "generate_alerts",
      "agent": "pattern_spotter",
      "params": {
        "thresholds": "{thresholds}",
        "current_data": {
          "risk": "{current_risk}",
          "market": "{market_metrics}"
        },
        "alert_types": ["warning", "critical", "info"]
      },
      "output": "alert_list"
    },
    {
      "step": "create_alert_ui",
      "agent": "ui_generator",
      "params": {
        "component_type": "alert_feed",
        "data": {
          "alerts": "{alert_list}"
        },
        "style": "default"
      },
      "output": "alert_component"
    }
  ]
}