{
  "id": "confidence_display",
  "name": "Confidence Meter Display",
  "description": "Shows prediction confidence with historical accuracy context",
  "category": "ui",
  "triggers": ["confidence", "accuracy", "trust"],
  "workflow": [
    {
      "step": "get_latest_prediction",
      "action": "get_execution_log",
      "params": {
        "limit": 1,
        "filter": "predictions"
      },
      "output": "prediction_data"
    },
    {
      "step": "get_confidence_styling",
      "action": "enriched_lookup",
      "params": {
        "data_type": "ui_configurations",
        "query": "component_styles.confidence_meter"
      },
      "output": "confidence_styles"
    },
    {
      "step": "calculate_factors",
      "agent": "pattern_spotter",
      "params": {
        "data": "{prediction_data}",
        "analysis_type": "confidence_breakdown"
      },
      "output": "confidence_factors"
    },
    {
      "step": "generate_confidence_ui",
      "agent": "ui_generator",
      "params": {
        "component_type": "confidence_meter",
        "data": {
          "confidence": 85,
          "title": "Prediction Confidence",
          "factors": "{confidence_factors}",
          "styles": "{confidence_styles}"
        },
        "style": "default"
      },
      "output": "confidence_component"
    }
  ]
}