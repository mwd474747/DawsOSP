{
  "id": "audit_everything",
  "name": "Comprehensive Audit Trail",
  "description": "Track every action, decision, and data change for full transparency",
  "category": "governance",
  "steps": [
    {
      "order": 1,
      "agent": "governance",
      "action": "enable_audit_mode",
      "parameters": {
        "log_level": "detailed",
        "track_decisions": true,
        "track_data_changes": true
      }
    },
    {
      "order": 2,
      "agent": "workflow_recorder",
      "action": "record_all_actions",
      "parameters": {
        "include_reasoning": true,
        "include_confidence": true
      }
    },
    {
      "order": 3,
      "agent": "graph_mind",
      "action": "visualize_decision_paths",
      "parameters": {
        "show_alternatives": true,
        "show_confidence_levels": true
      }
    }
  ],
  "triggers": ["audit mode", "track everything", "full transparency"],
  "template": "**Audit Mode Enabled**\n\nTracking:\n- All agent decisions with reasoning\n- Data lineage and transformations\n- Pattern execution paths\n- Confidence levels and alternatives considered\n\nAccess audit logs in: /storage/audit_trail/"
}