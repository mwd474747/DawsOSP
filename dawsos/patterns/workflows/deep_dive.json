{
  "id": "deep_dive",
  "name": "Company Deep Dive",
  "description": "Comprehensive analysis using Buffett-Ackman-Dalio framework (Trinity 2.0 capability routing)",
  "triggers": [
    "deep dive",
    "full analysis",
    "investment thesis",
    "research"
  ],
  "entities": [
    "SYMBOL"
  ],
  "priority": 9,
  "steps": [
    {
      "description": "",
      "action": "execute_through_registry",
      "params": {
        "capability": "can_fetch_news",
        "context": {
          "symbol": "{SYMBOL}"
        }
      },
      "save_as": "company_data"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "context": {
          "data": "{company_data}"
        },
        "capability": "can_summarize_data"
      },
      "save_as": "structured_analysis"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "context": {
          "data": "{structured_analysis}",
          "analysis_type": "investment_quality"
        },
        "capability": "can_detect_patterns"
      },
      "save_as": "quality_metrics"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "context": {
          "data": "{structured_analysis}"
        },
        "capability": "can_find_relationships"
      },
      "save_as": "relationships"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "context": {
          "data": "{company_data}"
        },
        "capability": "can_generate_forecast"
      },
      "save_as": "forecast"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "claude",
        "context": {
          "user_input": "Create investment thesis for {SYMBOL} using Buffett-Ackman-Dalio framework. Data: {structured_analysis}, Quality: {quality_metrics}, Related: {relationships}, Forecast: {forecast}. Include: Executive Summary, Business Analysis, Financial Health, Valuation, Risks, Catalyst, Recommendation with conviction level"
        }
      },
      "save_as": "investment_thesis"
    }
  ],
  "response_type": "deep_analysis",
  "response_template": "{investment_thesis}",
  "cache_ttl": 3600,
  "version": "2.0",
  "last_updated": "2025-10-08"
}