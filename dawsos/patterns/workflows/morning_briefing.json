{
  "id": "morning_briefing",
  "name": "Morning Market Briefing",
  "description": "Comprehensive morning market overview and analysis",
  "triggers": [
    "morning",
    "briefing",
    "daily update",
    "market open"
  ],
  "entities": [],
  "priority": 9,
  "steps": [
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "data_harvester",
        "context": {
          "request": "Get futures, major indices, VIX, DXY, commodities, crypto"
        }
      },
      "save_as": "market_overview"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "data_harvester",
        "context": {
          "request": "Get latest economic calendar and earnings today"
        }
      },
      "save_as": "calendar_data"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "pattern_spotter",
        "context": {
          "data": "{market_overview}",
          "analysis_type": "regime"
        }
      },
      "save_as": "regime_status"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "data_harvester",
        "context": {
          "request": "Get top market news and sentiment"
        }
      },
      "save_as": "news_data"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "claude",
        "context": {
          "user_input": "Create morning briefing with: Market overview: {market_overview}, Regime: {regime_status}, Calendar: {calendar_data}, News: {news_data}. Format as: 1) Market Regime & Sentiment 2) Key Levels to Watch 3) Economic Events 4) Earnings Today 5) Trading Ideas"
        }
      },
      "save_as": "briefing"
    }
  ],
  "response_type": "briefing",
  "response_template": "{briefing}",
  "cache_ttl": 1800,
  "version": "1.0",
  "last_updated": "2025-10-02"
}