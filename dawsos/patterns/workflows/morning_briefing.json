{
  "id": "morning_briefing",
  "name": "Morning Market Briefing",
  "description": "Comprehensive morning market overview and analysis (Trinity 2.0 capability routing)",
  "triggers": [
    "morning",
    "briefing",
    "daily update",
    "market open"
  ],
  "entities": [],
  "priority": 9,
  "steps": [
    {
      "description": "",
      "action": "execute_through_registry",
      "params": {
        "capability": "can_fetch_crypto_data",
        "context": {}
      },
      "save_as": "market_overview"
    },
    {
      "description": "",
      "action": "execute_through_registry",
      "params": {
        "capability": "can_fetch_economic_data",
        "context": {}
      },
      "save_as": "calendar_data"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "context": {
          "data": "{market_overview}",
          "analysis_type": "regime"
        },
        "capability": "can_detect_patterns"
      },
      "save_as": "regime_status"
    },
    {
      "description": "",
      "action": "execute_through_registry",
      "params": {
        "capability": "can_fetch_news",
        "context": {}
      },
      "save_as": "news_data"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "claude",
        "context": {
          "user_input": "Create morning briefing with: Market overview: {market_overview}, Regime: {regime_status}, Calendar: {calendar_data}, News: {news_data}. Format as: 1) Market Regime & Sentiment 2) Key Levels to Watch 3) Economic Events 4) Earnings Today 5) Trading Ideas"
        }
      },
      "save_as": "briefing"
    }
  ],
  "response_type": "briefing",
  "response_template": "{briefing}",
  "cache_ttl": 1800,
  "version": "2.0",
  "last_updated": "2025-10-08"
}