{
  "id": "company_analysis",
  "name": "Company Analysis",
  "description": "Comprehensive analysis of a company's fundamentals and performance (Trinity 2.0 capability routing)",
  "category": "queries",
  "triggers": [
    "analyze",
    "company",
    "fundamental",
    "company fundamentals",
    "valuation"
  ],
  "entities": [
    "SYMBOL"
  ],
  "priority": 8,
  "steps": [
    {
      "description": "",
      "action": "execute_through_registry",
      "params": {
        "capability": "can_fetch_fundamentals",
        "context": {
          "symbol": "{SYMBOL}"
        }
      },
      "save_as": "company_data"
    },
    {
      "action": "enriched_lookup",
      "params": {
        "data_type": "sp500_companies",
        "query": "sector_peers",
        "symbol": "{SYMBOL}",
        "sector": "{company_data.sector}"
      },
      "save_as": "peer_companies"
    },
    {
      "action": "enriched_lookup",
      "params": {
        "data_type": "relationships",
        "query": "supply_chain_relationships",
        "company": "{SYMBOL}"
      },
      "save_as": "supply_chain"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "context": {
          "data": "{company_data}"
        },
        "capability": "can_summarize_data"
      },
      "save_as": "digested_data"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "claude",
        "context": {
          "user_input": "Analyze {SYMBOL} with fundamentals {digested_data}, peer companies {peer_companies.data}, and supply chain {supply_chain.data}. Apply Buffett-Ackman-Dalio framework. Provide: 1) Business quality score 2) Valuation vs peers 3) Competitive position analysis 4) Supply chain risks 5) Growth prospects 6) Investment recommendation with peer comparison"
        }
      },
      "save_as": "analysis_report"
    }
  ],
  "response_type": "analysis",
  "response_template": "{analysis_report}",
  "cache_ttl": 1800,
  "version": "2.0",
  "last_updated": "2025-10-08"
}