{
  "id": "macro_analysis",
  "name": "Macro Economic Analysis",
  "description": "Analyzes macroeconomic indicators and trends",
  "triggers": [
    "macro",
    "economy",
    "gdp",
    "inflation",
    "unemployment",
    "fed",
    "rates"
  ],
  "entities": [],
  "priority": 8,
  "steps": [
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "data_harvester",
        "context": {
          "request": "Get latest GDP, CPI, unemployment, fed funds rate, 10Y yield data"
        }
      },
      "save_as": "macro_data"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "pattern_spotter",
        "context": {
          "data": "{macro_data}",
          "analysis_type": "macro_trends"
        }
      },
      "save_as": "macro_patterns"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "claude",
        "context": {
          "user_input": "Analyze this macro data {macro_data} and patterns {macro_patterns}. Provide: 1) Economic cycle stage 2) Key trends 3) Risk factors 4) Investment implications"
        }
      },
      "save_as": "macro_report"
    }
  ],
  "response_type": "analysis",
  "response_template": "{macro_report}",
  "cache_ttl": 600,
  "version": "1.0",
  "last_updated": "2025-10-02"
}