{
  "id": "correlation_finder",
  "name": "Find Correlations",
  "description": "Discovers correlations between assets, indicators, or economic variables",
  "triggers": [
    "correlation",
    "correlate",
    "relationship",
    "related",
    "connected"
  ],
  "entities": [
    "SYMBOL"
  ],
  "priority": 7,
  "steps": [
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "data_harvester",
        "context": {
          "request": "Get historical data for {SYMBOL} and major assets: SPY QQQ DXY GLD TLT VIX"
        }
      },
      "save_as": "price_data"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "relationship_hunter",
        "context": {
          "data": "{price_data}",
          "target": "{SYMBOL}"
        }
      },
      "save_as": "correlations"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "claude",
        "context": {
          "user_input": "Analyze correlations for {SYMBOL}: {correlations}. Explain: 1) Strong correlations found 2) Inverse relationships 3) Trading implications 4) Hedge opportunities"
        }
      },
      "save_as": "correlation_report"
    }
  ],
  "response_type": "analysis",
  "response_template": "{correlation_report}",
  "cache_ttl": 1800,
  "version": "1.0",
  "last_updated": "2025-10-02"
}