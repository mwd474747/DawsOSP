{
  "id": "alert_manager",
  "name": "Smart Alert System",
  "description": "Monitors thresholds and generates contextual alerts (Trinity 2.0 capability routing)",
  "category": "ui",
  "triggers": [
    "alerts",
    "notifications",
    "warnings"
  ],
  "version": "2.0",
  "last_updated": "2025-10-08",
  "steps": [
    {
      "action": "enriched_lookup",
      "params": {
        "data_type": "ui_configurations",
        "query": "alert_thresholds"
      },
      "save_as": "thresholds"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "context": {
          "analysis_type": "risk"
        },
        "capability": "can_find_relationships"
      },
      "save_as": "current_risk"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "context": {
          "analysis_type": "macro"
        },
        "capability": "can_detect_patterns"
      },
      "save_as": "market_metrics"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "context": {
          "thresholds": "{thresholds}",
          "current_data": {
            "risk": "{current_risk}",
            "market": "{market_metrics}"
          },
          "alert_types": [
            "warning",
            "critical",
            "info"
          ]
        },
        "capability": "can_detect_patterns"
      },
      "save_as": "alert_list"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "context": {
          "data": {
            "alerts": "{alert_list}"
          }
        },
        "capability": "can_generate_ui"
      },
      "save_as": "alert_component"
    }
  ]
}