{
  "id": "alert_manager",
  "name": "Smart Alert System",
  "description": "Monitors thresholds and generates contextual alerts (Trinity 2.0 capability routing)",
  "category": "ui",
  "triggers": [
    "alerts",
    "notifications",
    "warnings"
  ],
  "version": "2.0",
  "last_updated": "2025-10-08",
  "steps": [
    {
      "action": "enriched_lookup",
      "params": {
        "data_type": "ui_configurations",
        "query": "alert_thresholds"
      },
      "save_as": "thresholds"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "relationship_hunter",
        "context": {
          "analysis_type": "risk",
          "include_correlations": true,
          "timeframe": "1M"
        }
      },
      "save_as": "current_risk"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "pattern_spotter",
        "context": {
          "analysis_type": "macro",
          "indicators": [
            "VIX",
            "DXY",
            "TNX"
          ],
          "include_trends": true
        }
      },
      "save_as": "market_metrics"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "pattern_spotter",
        "context": {
          "thresholds": "{thresholds}",
          "current_data": {
            "risk": "{current_risk}",
            "market": "{market_metrics}"
          },
          "alert_types": [
            "warning",
            "critical",
            "info"
          ]
        }
      },
      "save_as": "alert_list"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "ui_generator",
        "context": {
          "component_type": "alert_feed",
          "data": {
            "alerts": "{alert_list}"
          },
          "style": "default"
        }
      },
      "save_as": "alert_component"
    }
  ]
}