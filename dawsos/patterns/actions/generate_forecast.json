{
  "id": "generate_forecast",
  "name": "Generate Forecast",
  "description": "Creates price or trend forecasts using multiple models",
  "triggers": [
    "forecast",
    "predict",
    "projection",
    "target",
    "estimate"
  ],
  "entities": [
    "SYMBOL",
    "TIMEFRAME"
  ],
  "priority": 9,
  "steps": [
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "data_harvester",
        "context": {
          "request": "Get historical data for {SYMBOL} - 2 years daily"
        }
      },
      "save_as": "historical_data"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "forecast_dreamer",
        "context": {
          "data": "{historical_data}",
          "target": "{SYMBOL}",
          "horizon": "{TIMEFRAME}"
        }
      },
      "save_as": "forecast"
    },
    {
      "action": "execute_through_registry",
      "params": {
        "agent": "claude",
        "context": {
          "user_input": "Forecast for {SYMBOL}: {forecast}. Provide: 1) Price targets 2) Confidence levels 3) Key assumptions 4) Risk factors"
        }
      },
      "save_as": "forecast_report"
    }
  ],
  "response_type": "forecast",
  "response_template": "{forecast_report}",
  "cache_ttl": 3600,
  "version": "1.0",
  "last_updated": "2025-10-02"
}