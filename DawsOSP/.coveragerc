# Coverage Configuration for DawsOS
# Created: 2025-10-27

[run]
source = backend/app
omit =
    */tests/*
    */migrations/*
    */__pycache__/*
    */venv/*
    */env/*
    */.venv/*

[report]
precision = 2
show_missing = true
skip_covered = false
sort = Cover

# Exclude lines from coverage
exclude_lines =
    # Standard pragma
    pragma: no cover

    # Debugging
    def __repr__
    def __str__

    # Defensive programming
    raise AssertionError
    raise NotImplementedError

    # Non-runnable code
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:

    # Abstract methods
    @abstractmethod
    @abc.abstractmethod

    # Ellipsis (...)
    \.\.\.

[html]
directory = backend/htmlcov
title = DawsOS Test Coverage Report

[xml]
output = backend/coverage.xml
