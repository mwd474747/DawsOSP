# DawsOS API Configuration Template
# Copy this file to .env and add your actual API keys

# === REQUIRED FOR CORE FEATURES ===
ANTHROPIC_API_KEY=

# === RECOMMENDED FOR PREMIUM DATA ===
FMP_API_KEY=
FRED_API_KEY=
NEWS_API_KEY=
POLYGON_API_KEY=

# === MACRO DATA SOURCES (Optional - will use fallbacks if not provided) ===
WORLD_BANK_API_KEY=  # Optional, public API
IMF_API_KEY=  # If you have access
SIPRI_API_KEY=  # If available

# === APPLICATION SETTINGS ===
CIRCUIT_BREAKER_THRESHOLD=3
CIRCUIT_BREAKER_TIMEOUT=60
LOG_LEVEL=INFO
DATABASE_URL=postgresql://dawsos_app:dawsos_app_pass@localhost:5432/dawsos
