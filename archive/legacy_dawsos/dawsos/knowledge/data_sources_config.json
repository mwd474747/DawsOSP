{
  "data_sources": {
    "market_data": {
      "primary": {
        "yahoo_finance": {
          "enabled": true,
          "free": true,
          "endpoints": ["quote", "history", "options"],
          "update_frequency": "15min",
          "symbols": ["SPY", "QQQ", "DIA", "IWM", "VIX"]
        },
        "alpha_vantage": {
          "enabled": false,
          "free": true,
          "api_key": "YOUR_KEY_HERE",
          "rate_limit": 5,
          "endpoints": ["TIME_SERIES_DAILY", "SMA", "RSI"]
        }
      },
      "alternative": {
        "fear_greed_index": {
          "url": "https://api.alternative.me/fng/",
          "update_frequency": "daily"
        },
        "put_call_ratio": {
          "source": "CBOE",
          "importance": "high"
        }
      }
    },
    "economic_data": {
      "fred": {
        "enabled": true,
        "api_key": "YOUR_FRED_KEY",
        "series": {
          "GDP": "quarterly",
          "UNRATE": "monthly",
          "CPIAUCSL": "monthly",
          "DFF": "daily",
          "DGS10": "daily",
          "DEXUSEU": "daily"
        }
      },
      "world_bank": {
        "enabled": false,
        "indicators": ["NY.GDP.MKTP.CD", "FP.CPI.TOTL.ZG"]
      }
    },
    "news_sentiment": {
      "sources": {
        "newsapi": {
          "enabled": false,
          "api_key": "YOUR_NEWS_KEY",
          "domains": ["wsj.com", "bloomberg.com", "reuters.com"],
          "categories": ["business", "finance"]
        },
        "reddit": {
          "enabled": true,
          "subreddits": ["wallstreetbets", "stocks", "investing"],
          "min_score": 100
        },
        "twitter": {
          "enabled": false,
          "accounts": ["@DeItaone", "@FirstSquawk", "@LiveSquawk"],
          "hashtags": ["#stocks", "#trading", "#markets"]
        }
      }
    },
    "fundamental_data": {
      "sec_edgar": {
        "enabled": true,
        "filings": ["10-K", "10-Q", "8-K"],
        "parse_tables": true
      },
      "financial_modeling_prep": {
        "enabled": false,
        "api_key": "YOUR_FMP_KEY",
        "endpoints": ["income-statement", "balance-sheet", "cash-flow"]
      }
    },
    "alternative_data": {
      "google_trends": {
        "enabled": true,
        "keywords": ["recession", "inflation", "stock market crash"],
        "geo": "US"
      },
      "satellite": {
        "enabled": false,
        "providers": ["Planet Labs", "Orbital Insight"],
        "use_cases": ["retail_traffic", "oil_storage", "agriculture"]
      },
      "web_scraping": {
        "enabled": false,
        "targets": {
          "glassdoor": "employee_sentiment",
          "indeed": "job_postings",
          "app_annie": "app_downloads"
        }
      }
    }
  },
  "enrichment_schedule": {
    "real_time": ["market_quotes", "news_alerts"],
    "every_15min": ["market_data", "options"],
    "hourly": ["sentiment_analysis", "technical_indicators"],
    "daily": ["fundamental_updates", "economic_data"],
    "weekly": ["alternative_data", "relationship_mapping"]
  },
  "quality_requirements": {
    "data_freshness": {
      "market_data": "< 1 minute",
      "news": "< 5 minutes",
      "fundamentals": "< 24 hours",
      "economic": "< 1 hour after release"
    },
    "accuracy_standards": {
      "price_data": 0.999,
      "volume_data": 0.99,
      "fundamental_data": 0.95,
      "sentiment_scores": 0.85
    },
    "validation_rules": {
      "price_sanity": "within 20% of previous close",
      "volume_sanity": "within 10x average",
      "cross_validation": "check 3 sources minimum"
    }
  },
  "storage_strategy": {
    "hot_data": {
      "location": "knowledge/live_data/",
      "retention": "24 hours",
      "types": ["quotes", "news", "alerts"]
    },
    "warm_data": {
      "location": "knowledge/enriched_data/",
      "retention": "30 days",
      "types": ["indicators", "sentiment", "patterns"]
    },
    "cold_data": {
      "location": "storage/historical/",
      "retention": "unlimited",
      "types": ["backtesting", "training", "archives"]
    }
  },
  "integration_patterns": [
    {
      "name": "market_pulse",
      "description": "Real-time market health check",
      "data_required": ["quotes", "volume", "sentiment", "vix"],
      "update_frequency": "1min"
    },
    {
      "name": "fundamental_screen",
      "description": "Value investing opportunities",
      "data_required": ["financials", "ratios", "growth_rates"],
      "update_frequency": "daily"
    },
    {
      "name": "event_driven",
      "description": "News and earnings trading",
      "data_required": ["news", "earnings_calendar", "guidance"],
      "update_frequency": "real-time"
    },
    {
      "name": "macro_overlay",
      "description": "Economic regime detection",
      "data_required": ["fed_data", "yields", "forex", "commodities"],
      "update_frequency": "hourly"
    }
  ]
}