{
  "schema_version": "1.0",
  "cycles": [
    {
      "id": "short_term_debt",
      "name": "Short-Term Debt Cycle (STDC)",
      "method_version": "stdc_v1",
      "description": "5-10 year business cycles driven by credit expansion and contraction",
      "indicators": [
        {
          "id": "T10Y2Y",
          "weight": 0.35,
          "transform": "zscore",
          "desc": "Yield curve slope - primary cycle indicator"
        },
        {
          "id": "UNRATE",
          "weight": 0.25,
          "transform": "zscore",
          "desc": "Unemployment rate - labor market health"
        },
        {
          "id": "CPIAUCSL",
          "weight": 0.25,
          "transform": "zscore",
          "desc": "Inflation - price pressures"
        },
        {
          "id": "BAA10Y",
          "weight": 0.15,
          "transform": "zscore",
          "desc": "Credit spreads - financial stress"
        }
      ],
      "phases": [
        {
          "number": 1,
          "label": "Early Recovery",
          "rules": {
            "T10Y2Y": "positive_steep",
            "UNRATE_change": "negative",
            "GDP_growth": "positive"
          }
        },
        {
          "number": 2,
          "label": "Mid Expansion",
          "rules": {
            "T10Y2Y": "positive",
            "UNRATE": "low",
            "GDP_growth": "strong"
          }
        },
        {
          "number": 3,
          "label": "Late Expansion / Boom",
          "rules": {
            "T10Y2Y": "flattening",
            "UNRATE": "very_low",
            "CPIAUCSL": "high"
          }
        },
        {
          "number": 4,
          "label": "Early Recession",
          "rules": {
            "T10Y2Y": "negative",
            "GDP_growth": "slowing"
          }
        },
        {
          "number": 5,
          "label": "Deep Recession",
          "rules": {
            "UNRATE_change": "positive_sharp",
            "GDP_growth": "negative"
          }
        }
      ],
      "zscore_window_days": 365
    },
    {
      "id": "long_term_debt",
      "name": "Long-Term Debt Cycle (LTDC)",
      "method_version": "ltdc_v1",
      "description": "50-75 year debt super cycles",
      "indicators": [
        {
          "id": "DEBT_GDP",
          "weight": 0.4,
          "transform": "zscore",
          "desc": "Debt-to-GDP ratio - leverage level"
        },
        {
          "id": "REAL_POLICY_RATE",
          "weight": 0.3,
          "transform": "zscore",
          "desc": "Real policy rate - monetary conditions"
        },
        {
          "id": "CREDIT_IMPULSE",
          "weight": 0.3,
          "transform": "zscore",
          "desc": "Credit impulse - credit growth acceleration"
        }
      ],
      "phases": [
        {
          "number": 1,
          "label": "Deleveraging",
          "rules": {
            "DEBT_GDP": "falling",
            "REAL_POLICY_RATE": "high"
          }
        },
        {
          "number": 2,
          "label": "Reflation",
          "rules": {
            "REAL_POLICY_RATE": "negative",
            "CREDIT_IMPULSE": "rising"
          }
        },
        {
          "number": 3,
          "label": "Expansion",
          "rules": {
            "DEBT_GDP": "rising_moderate",
            "GDP_growth": "positive"
          }
        },
        {
          "number": 4,
          "label": "Bubble",
          "rules": {
            "DEBT_GDP": "rising_rapid",
            "CREDIT_IMPULSE": "very_high"
          }
        },
        {
          "number": 5,
          "label": "Top",
          "rules": {
            "REAL_POLICY_RATE": "rising",
            "GDP_growth": "slowing"
          }
        },
        {
          "number": 6,
          "label": "Debt Crisis",
          "rules": {
            "CREDIT_IMPULSE": "falling_sharp",
            "default_rate": "rising"
          }
        },
        {
          "number": 7,
          "label": "Depression",
          "rules": {
            "GDP_growth": "negative_severe",
            "UNRATE": "very_high"
          }
        }
      ],
      "zscore_window_days": 3650
    },
    {
      "id": "empire",
      "name": "Empire Cycle",
      "method_version": "empire_v1",
      "description": "200-300 year cycles of rise and decline of global powers",
      "indicators": [
        {
          "id": "RESERVE_SHARE",
          "weight": 0.3,
          "desc": "Share of global reserve currency holdings"
        },
        {
          "id": "WORLD_GDP_SHARE",
          "weight": 0.25,
          "desc": "Share of global GDP"
        },
        {
          "id": "FIN_CENTER_INDEX",
          "weight": 0.2,
          "desc": "Financial center dominance index"
        },
        {
          "id": "MILITARY_POWER",
          "weight": 0.15,
          "desc": "Military power index"
        },
        {
          "id": "INTERNAL_ORDER",
          "weight": 0.05,
          "desc": "Internal political/social order"
        },
        {
          "id": "INNOVATION_RATE",
          "weight": 0.05,
          "desc": "Innovation and productivity growth"
        }
      ],
      "phases": [
        {
          "number": 1,
          "label": "Rise",
          "desc": "Ascending power with growing influence"
        },
        {
          "number": 2,
          "label": "Peak",
          "desc": "Dominant global power"
        },
        {
          "number": 3,
          "label": "Decline",
          "desc": "Gradual loss of dominance"
        },
        {
          "number": 4,
          "label": "Collapse",
          "desc": "Rapid decline and transition"
        }
      ]
    }
  ]
}
