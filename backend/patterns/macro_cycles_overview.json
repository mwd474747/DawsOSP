{
  "id": "macro_cycles_overview",
  "name": "Macro Cycles Overview",
  "description": "Complete Dalio framework: Short-Term Debt, Long-Term Debt, Empire, and Civil/Internal Order cycles",
  "version": "2.0.0",
  "category": "economy",
  "tags": ["cycles", "dalio", "debt", "empire", "civil", "macro"],
  "author": "DawsOS",
  "created": "2025-10-31",
  "inputs": {
    "asof_date": {
      "type": "date",
      "required": false,
      "description": "Analysis date (defaults to ctx.asof_date)"
    }
  },
  "outputs": {
    "stdc": "Short-term debt cycle analysis",
    "ltdc": "Long-term debt cycle analysis", 
    "empire": "Empire cycle analysis",
    "civil": "Civil/internal order cycle analysis"
  },
  "steps": [
    {
      "capability": "cycles.compute_short_term",
      "args": {
        "asof_date": "{{inputs.asof_date}}"
      },
      "as": "stdc",
      "fallback": {
        "phase_label": "Late Expansion",
        "score": 0.72,
        "confidence": 0.85,
        "description": "Credit growth decelerating, rates elevated",
        "phase_duration_months": 14,
        "credit_growth": 0.034,
        "policy_rate_zscore": 1.8,
        "unemployment_gap": -0.012,
        "next_phase_probability": { "contraction": 0.65, "continuation": 0.35 }
      }
    },
    {
      "capability": "cycles.compute_long_term",
      "args": {
        "asof_date": "{{inputs.asof_date}}"
      },
      "as": "ltdc",
      "fallback": {
        "phase_label": "Late Cycle",
        "score": 0.68,
        "confidence": 0.78,
        "description": "High debt levels, declining productivity growth",
        "phase_duration_years": 3.5,
        "debt_to_gdp": 1.32,
        "debt_service_ratio": 0.145,
        "real_rates_trend": -0.021,
        "deleveraging_risk": "MEDIUM"
      }
    },
    {
      "capability": "cycles.compute_empire",
      "args": {
        "asof_date": "{{inputs.asof_date}}"
      },
      "as": "empire",
      "fallback": {
        "phase_label": "Relative Decline",
        "score": 0.51,
        "confidence": 0.72,
        "description": "Declining reserve currency share, rising competitors",
        "reserve_currency_share": 0.584,
        "military_power": 0.89,
        "innovation_rate": 0.76,
        "education_rank": 15,
        "trade_balance": -0.032
      }
    },
    {
      "capability": "cycles.compute_civil",
      "args": {},
      "as": "civil",
      "fallback": {
        "cycle_type": "civil",
        "phase_label": "Rising Tension",
        "phase_number": 3,
        "composite_score": 0.42,
        "confidence": 0.81,
        "description": "Increasing wealth inequality, declining social cohesion",
        "indicators": {
          "gini_coefficient": 0.415,
          "wealth_top_1pct": 0.324,
          "polarization_index": 0.78,
          "institutional_trust": 0.38,
          "social_mobility": 0.41
        },
        "risk_factors": {
          "wealth_inequality": "HIGH",
          "political_polarization": "HIGH",
          "trust_deficit": "HIGH"
        }
      }
    }
  ],
  "rights_required": ["macro_data_read"],
  "export_allowed": {
    "pdf": true,
    "csv": true
  }
}