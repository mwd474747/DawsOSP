  "scaling_rules": {
    "description": "Rules for converting raw database values to proper decimal form",
    "rules": [
      {
        "indicator": "inflation",
        "from_db": "multiply by 10000",
        "to_decimal": "divide by 10000",
        "example": "324.368 -> 0.0324 (3.24%)"
      },
      {
        "indicator": "gdp_growth",
        "from_db": "percentage",
        "to_decimal": "divide by 100",
        "example": "3.8 -> 0.038 (3.8%)"
      },
      {
        "indicator": "unemployment",
        "from_db": "percentage",
        "to_decimal": "divide by 100",
        "example": "4.3 -> 0.043 (4.3%)"
      },
      {
        "indicator": "credit_growth",
        "from_db": "raw value",
        "to_decimal": "divide by 1000000",
        "example": "104104.952 -> 0.104 (10.4%)"
      },
      {
        "indicator": "debt_service_ratio",
        "from_db": "raw value",
        "to_decimal": "divide by 10000000",
        "example": "1477427 -> 0.1477 (14.77%)"
      },
      {
        "indicator": "debt_to_gdp",
        "from_db": "raw value",
        "to_decimal": "divide by baseline GDP",
        "example": "36211469 / 27436999 = 1.32 (132%)"
      }
    ]
  },
  "validation_rules": {
    "description": "Validation rules for indicator values",
    "rules": [
      {
        "type": "range_check",
        "description": "All percentage values should be between -100% and 200%",
        "applies_to": ["percentage", "percentage_change", "percentage_of_gdp"]
      },
      {
        "type": "non_negative",
        "description": "These indicators should never be negative",
        "applies_to": ["unemployment", "vix", "debt_to_gdp", "gini_coefficient"]
      },
      {
        "type": "bounded_index",
        "description": "Index values should be within reasonable bounds",
        "applies_to": ["manufacturing_pmi", "consumer_confidence", "vix"]
      },
      {
        "type": "correlation_check",
        "description": "Real interest rate should equal nominal rate minus inflation",
        "formula": "real_interest_rate = interest_rate - inflation"
      }
    ]
  },
